<%- include('../partials/nav') %>

<main>
    <section class="text-secondary px-4">
        <h2 class="fw-6 text-white pt-4 text-center">
            <%= apiResult.Title %> 
        </h2>
        <div class = "container bg-dark">
            <div class="row">
                <div class="col">
                <img 
                width = "100%" 
                height = "500"
                src="<%= apiResult.Poster %>" 
                alt="<%= apiResult.Title %>'s background image" >
                </div>
            
                <div class="text-white col">
                    <p class="fs-4">Released: <%= apiResult.Year %> </p>
                    <p class="fs-4">Summary: <%= apiResult.Plot %> </p>          
                </div>
            </div>   
        </div>
    </section>
</main>

