<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<p class="py-3 my-0 fs-3 text-center text-light"><%= title %></p>
    <% if (results) {%> 
        <main>
            <div class="container py-5 px-3">
                <div class="row cols-4 g5">
                    <% results.forEach(movie => { %>
                        <div class="col">
                            <div class="card bg-dark shadow-sm mt-3">
                                <% if (movie.Poster) { %>
                                    <img
                                    class="card-img-top"
                                    src="<%= movie.Poster %>"
                                    alt="<%= movie.Poster %>'s image"
                                    width="100%"
                                    height="200"
                                    />
                                <% } %>
                                <div class="card-body">
                                    <p class="card-title fs-5 text-light"><%= movie.Title %></p>
                                    <p class="card-text fs-5 text-light">Released: <%= movie.Year %></p>
                                    <%# This is where our game show UI will go %> 
                                    <a href="/movies/<%= movie.imdbID %>" class="btn btn-primary">Details</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </main>
    <% } %>     

<%- include('../partials/footer') %>

