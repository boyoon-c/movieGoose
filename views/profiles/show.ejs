<%- include('../partials/html-head') %>
<% if (user.profile._id.toString() === profile._id.toString()) { %>
  <style>
    #profile-dropdown {
      display: none;
    }
  </style>
<% } %>
<%- include('../partials/nav') %>

<main>
  <section class="text-secondary px-4 py-5 text-center">
    <% if (profile.avatar) { %>
      <img
        class="image-rounded" 
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %>'s avatar"
        width=300em
      >
    <% } else {%>
      <img
        src="/images/icons/user.png" 
        alt="A placeholder avatar"
      >
    <% } %> 
    <h1 class="display-5 fw-bold text-white pt-2"><%= profile.name %></h1>
    <div class="container py-4">
      <table class="table table-dark table-striped align-middle">
        <tbody>
          <% if (user.profile._id.toString() === profile._id.toString()) { %>
            <tr>
              <td>Google Email:</td>
              <td><%= user.email %></td>
            </tr>
          <% } %>
          <tr>
            <td>Name:</td>
            <td><%= profile.name %></td>
          </tr>
          <tr>
            <td>Avatar URL:</td>
            <td>
              <a href="<%= profile.avatar %>">
                <%= profile.avatar.substring(0, 35) %>
                <% if (profile.avatar.length > 35) { %>
                ...
                <% } %>
              </a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <% if (user.profile._id.toString() === profile._id.toString()) { %>
      <a 
        class="btn btn-warning"
        role="button" 
        href="/profiles/<%= profile._id %>/edit"
      >
        Edit Profile
      </a>
      <a 
        class="btn btn-danger ms-4"
        role="button" 
        href="/auth/logout"
      >
        Logout
      </a>
    <% } %>
    
  </section>
  <section class="pt-3">
    <div class="container-fluid full-width-div" style="text-align:center">
      <h2 class="mb-3 bg-dark"><%= profile.name %>'s movies</h2>
      <div class="row justify-content-md-center row-cols-sm-1 row-cols-md-2 row-cols-lg-5 row-cols-xl-7 g-4 px-5">
        <% movies.forEach(movie => { %>
          <div class="col">
            <div class="card bg-dark shadow-sm mb-3" style="width:20em ;height:40em">
              <% if (movie.image) { %>
                <img
                  class="card-img-top"
                  src="<%= movie.image %>"
                  alt="<%= movie.title %>'s image"
                  width="100%"
                  height="75%"
                />
              <% } else {%>
                <img
                  class="card-img-top"
                  src="/images/icons/user.png"
                  alt="A placeholder avatar"
                  width="100%"
                  height="100%"
                />
              <% } %>
              <div class="card-body">
                <p class="card-title fs-5 text-light"><%= movie.title %></p>
                <a 
                  href="/movies/<%= movie.rawmId %>" 
                  class="btn btn-primary"
                >
                  Details
                </a>
                <form action="/profiles/<%=profile._id%>?_method=DELETE" method="POST" style="display: inline; text-align: center">
                  <input type="text" name="title" hidden value="<%= movie.rawmId%>">
                  <button class="btn btn-danger">
                    Remove from Likes
                  </button>
                  </form>
              </div>
            </div>
          </div>
        <% }) %>        
      </div>
      <h2 class="mb-3 bg-dark"><%= profile.name %>'s reviews</h2>
      <%# This is where all the reviews are going to be stacked. First, index MovieReview by profile id %>
      <div class="container-fluid full-width-div" style="text-align:center; color:black">
        <div class="row justify-content-md-center row-cols-sm-1 row-cols-md-2 row-cols-lg-5 row-cols-xl-7 g-4 px-5">
          <% reviews.forEach(review=>{ %> 
            <% movies.forEach(movie =>{ %>
              <% if (movie.rawmId==review.movie){ %> 
                <div class="col">
                  <div class="card bg-light shadow-sm mb-3" style="width:20em; height:100%">
                    <% if (movie.image) { %>
                      <img
                        class="card-img-top"
                        src="<%= movie.image %>"
                        alt="<%= movie.title %>'s image"
                        width="100%"
                        height="75%"
                      />
                    <% } else {%>
                      <img
                        class="card-img-top"
                        src="/images/icons/user.png"
                        alt="A placeholder avatar"
                        width="100%"
                        height="100%"
                      />
                    <% } %>
                    <div class="card-title fs-5"><%= movie.title %> </div>
                    <div class="card-body"><%= review.content %> </div>
                    <a 
                  href="/movies/<%= movie.rawmId %>" 
                  class="btn btn-primary"
                >
                  Movie Details
                </a>
                  </div>
                </div>
              <% } %> 
            <% })  %> 
           <% }) %> 
        </div>
      </div>
      

    </div>
  </section>
</main>

<%- include('../partials/footer') %>